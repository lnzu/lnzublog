html {
  background-color: $color-background;
}

body {
  margin: 0 15px 0 15px;
  -webkit-text-size-adjust:none;
}

@media all and (orientation:landscape){
	body {
		margin-left: 8%;
		margin-right: 8%;
	}
}

h1,h2,h3,h4,h5,h6,p,div,a,div,strong,em,sub,sup,blockquote,
footer,header,article,section,del,code
p>a,p>strong,p>em,
blockquote>p>a,blockquote>p>em,blockquote>p>strong,
pre,pre>code,code,
li,ul>li,ol>li
{
  font-family: Menlo;
  margin: 5px 0 5px 0;

  text-align:justify;
  text-justify:inter-ideograph;
  word-break: break-all;

  line-height: 1.75em;
  color: $color-text;
  
}

h1,h2,h3,h4,h5,h6 {
  font-size: 15px;
  border-radius: 5px;
  font-weight: bold;
}

h1:before,
h2:before,
h3:before,
h4:before,
h5:before,
h6:before {
  content: "#";
  margin-right: 3px;
  color: #5ed859;
  font-size: 17px;
}

p,div,a,div,strong,em,sub,sup,blockquote,
footer,header,article,section,del,code,
p>a,p>strong,p>em,
blockquote>p>a,blockquote>p>em,blockquote>p>strong,
pre,pre>code,code,
li,ul>li,ol>li
{
  font-size:12.5px;
}

a,p>a,blockquote>p>a,blockquote>a,ol>li>a,ul>li>a
p>strong>a,p>em>a
{
  color: #00A0FF;
  text-decoration: none;
  border-bottom: 1px solid #00A0FF;
}

a:hover {
  color: pink;
}

blockquote {
  background-color: $color-blockquote-bg;
  padding: 0.2px 6.5px 0.2px 6.5px;
  border-left: 10px solid $color-blockquote-left;
  word-break: break-all;
}

pre {
  padding: 5px 6px 5px 6px;
  margin-top: 0;
  border-radius:10px;
  overflow: auto; 
  overflow-y:hidden;
  -webkit-overflow-scrolling:touch;
  position: relative;
  
}

code,p>code,ul>code,ol>code{
  background: $color-code-bg;
  padding: .5px 4px;
  border-radius: 5px;
}

pre>code {
  background: transparent;
}

ul {
  padding-left: 25px;
  margin: 0;
}

ol {
  padding-left: 35px;
  margin: 0;
}

strong,p>strong,blockquote>strong,{
  color: $color-strong-text;
}

del {
  text-decoration-color: #ff6369;
}

hr {
  border: none;
  height: 2px;
  background: $color-hr;
  border-radius: 2px;
}


/*代码框的复制按钮*/
.pre_copy {
  color: $color-copy-text;
  position: absolute;
  top: 0;
  right: 0;
  margin: 0;
  background-color: $color-copy-bg;
  border: none;
  height: 25px;
  width: 40px;
  height: 20px;
  text-align: center;
  font-size: 10px;
  transition: opacity 0.3s ease-in-out;
  padding: 0;
}